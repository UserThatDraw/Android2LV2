<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkest_dark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.home.FormFragment">

    <TextView
        android:id="@+id/task_creator_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/task_creator"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/desc_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_creator_txt"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="10sp"
        android:background="@drawable/round"
        android:backgroundTint="@color/gray"
        android:hint="@string/description"
        android:padding="15dp"
        android:importantForAutofill="no"
        android:textColor="@color/white"
        android:textColorHint="@color/gary_day" />

    <Button
        android:id="@+id/save_blue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc_et"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="10sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/orange"
        android:text="@string/save_blue" />

</RelativeLayout>